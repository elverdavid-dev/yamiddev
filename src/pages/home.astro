---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import ThemeSwitcher from '../components/ThemeSwitcher';
---

<MainLayout title="Yamid Dev | Desarrollador Full Stack">
    <ThemeSwitcher client:visible />
    <!-- Hero Section -->
    <section id="hero" class="min-h-screen flex items-center">
        <div class="flex flex-col md:flex-row items-center gap-8">
            <div class="relative w-64 h-64 rounded-full border-4 border-[#39FF14]">
                <!-- Imagen para modo claro -->
                <img
                    src="https://yamid.dev/dev_v2.jpeg"
                    alt="Descripción de la imagen"
                    class="block dark:hidden w-full h-full rounded-full"
                />
            
                <!-- Imagen para modo oscuro -->
                <img
                    src="https://yamid.dev/dev.jpg"
                    alt="Descripción de la imagen"
                    class="hidden dark:block w-full h-full rounded-full"
                />
            </div>
            <div>
                <h1 class="text-4xl md:text-6xl font-bold mb-4">Yamid</h1>
                <h2 class="text-2xl md:text-4xl text-[#39FF14] mb-4">Desarrollador de Software</h2>
                <p class="text-lg md:text-xl max-w-2xl">Tecnólogo en Análisis y Desarrollo de Software con experiencia en desarrollo web y apasionado por el aprendizaje continuo.</p>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20">
        <h2 class="text-3xl font-bold mb-8 text-[#39FF14]">Sobre mí</h2>
        <div class="grid md:grid-cols-2 gap-8">
            <div>
                <p class="mb-4">Estudié Tecnología en Análisis y Desarrollo de Software en el SENA (2022-2024) y actualmente continúo mi formación en Platzi.</p>
                <p>Como aprendiz en Ega-Kat Logística, adquirí experiencia práctica en desarrollo de software y soluciones tecnológicas para optimizar procesos logísticos.</p>
            </div>
            <div class="space-y-4">
                <div class="p-4 bg-gray-100 dark:bg-gray-700 rounded-lg">
                    <h3 class="text-[#39FF14] font-bold">Educación</h3>
                    <p>SENA - Tecnólogo ADSO</p>
                    <p>2022-2024</p>
                </div>
                <div class="p-4 bg-gray-100 dark:bg-gray-700 rounded-lg">
                    <h3 class="text-[#39FF14] font-bold">Platzi</h3>
                    <p>Cursos especializados en desarrollo web</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-20">
        <h2 class="text-3xl font-bold mb-8 text-[#39FF14]">Habilidades</h2>
        <div class="grid md:grid-cols-2 gap-8">
            <div>
                <h3 class="text-xl font-bold mb-4">Tecnologías</h3>
                <div class="flex flex-wrap gap-2">
                    <span class="px-4 py-2 bg-[#39FF14] text-gray-800 rounded-full">JavaScript</span>
                    <span class="px-4 py-2 bg-[#39FF14] text-gray-800 rounded-full">React</span>
                    <!-- Añade más tecnologías -->
                </div>
            </div>
            <div>
                <h3 class="text-xl font-bold mb-4">Soft Skills</h3>
                <div class="flex flex-wrap gap-2">
                    <span class="px-4 py-2 bg-[#39FF14] text-gray-800 rounded-full">Trabajo en equipo</span>
                    <span class="px-4 py-2 bg-[#39FF14] text-gray-800 rounded-full">Resolución de problemas</span>
                    <!-- Añade más skills -->
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20">
        <h2 class="text-3xl font-bold mb-8 text-[#39FF14]">Proyectos</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Proyecto ejemplo -->
            <div class="bg-gray-100 dark:bg-gray-700 p-6 rounded-lg">
                <img src="/proyecto1.jpg" alt="Proyecto" class="mb-4 rounded-lg">
                <h3 class="text-xl font-bold mb-2">Nombre Proyecto</h3>
                <p>Descripción breve del proyecto y tecnologías utilizadas.</p>
                <div class="mt-4 flex gap-2">
                    <a href="#" class="text-[#39FF14]">Demo</a>
                    <a href="#" class="text-[#39FF14]">Código</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20">
        <h2 class="text-3xl font-bold mb-8 text-[#39FF14]">Contacto</h2>
        <form class="max-w-2xl mx-auto">
            <div class="grid gap-6 mb-6">
                <input type="text" placeholder="Nombre" class="p-3 bg-gray-100 dark:bg-gray-700 rounded-lg">
                <input type="email" placeholder="Email" class="p-3 bg-gray-100 dark:bg-gray-700 rounded-lg">
                <textarea rows="5" placeholder="Mensaje" class="p-3 bg-gray-100 dark:bg-gray-700 rounded-lg"></textarea>
            </div>
            <button class="px-6 py-3 bg-[#39FF14] text-gray-800 font-bold rounded-lg hover:bg-opacity-90 transition">
                Enviar Mensaje
            </button>
        </form>
    </section>
</MainLayout>