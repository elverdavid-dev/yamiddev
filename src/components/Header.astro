---
import { Icon } from 'astro-icon';
---

<header class="bg-white dark:bg-slate-900 shadow-md fixed w-full top-0 z-50 transition-colors duration-300">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a 
        href="/" 
        class="text-2xl w-full font-bold text-cyan-600 dark:text-cyan-400 hover:text-blue-600 dark:hover:text-cyan-300 transform hover:scale-105 transition-all duration-300 text-center md:text-left"
      >
        yamid.dev
      </a>
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');

if (themeToggle) {
  themeToggle.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
  });
};
</script>
